generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id          Int      @id @default(autoincrement())
  partNumber  String 
  startTime   String
  endTime     String
  ct          String
  standard    String
  limitHigh   Int
  limitLow    Int
  filename    String?
  created_at  DateTime @default(now())
}

model Thresholds {
  id          Int      @id @default(autoincrement())
  partNumber  String   @unique
  standard    String
  limitHigh   Int
  limitLow    Int
  created_at  DateTime @default(now())
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  firstname  String
  lastname   String
  level      String
  createdAt  DateTime @default(now())
  logs       UserLog[]
  @@map("users")
}


model UserLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  type      String?      // optional
  meta      Json?        // optional
  ip        String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@map("user_logs")
}